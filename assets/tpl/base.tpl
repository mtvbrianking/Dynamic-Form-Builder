<div class="form-builder row">
		
	<div class="build-tools col-xs-12 col-sm-3 col-md-3">

		<button class="btn btn-default new-element" data-type="text">
			<span class="glyphicon glyphicon-font"></span>&nbsp;Text
		</button>
		
		<button class="btn btn-default new-element" data-type="select">
			<span class="glyphicon glyphicon‐collapse‐down"></span>&nbsp;Select
		</button>
		
		<button class="btn btn-default new-element" data-type="radio">
			<span class="glyphicon glyphicon-record"></span>&nbsp;Radio
		</button>
		
		<button class="btn btn-default new-element" data-type="check">
			<span class="glyphicon glyphicon-check"></span>&nbsp;Check
		</button>

		<div class="row">
			<button class="btn btn-success save-form">
				<span class="glyphicon glyphicon-file"></span>&nbsp;Save
			</button>
		</div>

	</div>

	<div class="form-preview col-xs-12 col-sm-9 col-md-9">

		<div class="field-group">
			<input type="text" class="form-control" id="form-title" name="form-title" value="Untitled Form">
		</div>

		<div class="field-group">
			<input type="text" class="form-control" id="form-description" name="form-description" value="Form Description">
		</div>

		<ul class="sortable">

			<!-- Form Preview will be loaded here -->

		</ul>

	</div>

</div>